@model ContatoViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- breadcrumb-area-start -->
<div class="it-breadcrumb-area it-breadcrumb-bg" data-background="~/assets/img/breadcrumb/breadcrumb.jpg">
    <div class="container">
        <div class="row ">
            <div class="col-md-12">
                <div class="it-breadcrumb-content z-index-3 text-center">
                    <div class="it-breadcrumb-title-box">
                        <h3 class="it-breadcrumb-title">Contato</h3>
                    </div>
                    <div class="it-breadcrumb-list-wrap">
                        <div class="it-breadcrumb-list">
                            <span><a href="/Home">Home</a></span>
                            <span class="dvdr">//</span>
                            <span>Contato</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area-end -->
<!-- contact-area-start -->
<div class="it-contact__area pt-120 pb-120">
    <div class="container">
        <div class="it-contact__wrap fix z-index-3 p-relative">
            <div class="it-contact__shape-1 d-none d-xl-block">
                <img src="~/assets/img/contact/shape-2-1.png" alt="">
            </div>
            <div class="row align-items-end">
                <div class="col-xl-7">
                    <div class="it-contact__right-box">
                        <div class="it-contact__section-box pb-20">
                            <h4 class="it-contact__title pb-15">Entre em contato</h4>
                        </div>
                        <div class="it-contact__content mb-55">
                            <ul>
                                <li>
                                    <div class="it-contact__list d-flex align-items-start">
                                        <div class="it-contact__icon">
                                            <span><i class="fa-solid fa-location-dot"></i></span>
                                        </div>
                                        <div class="it-contact__text">
                                            <span>Nosso endereço</span>
                                            <a href="#">
                                                Rua Coronel Rabelo, 1189, Centro
                                                <br>
                                                Patrocínio - MG
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="it-contact__list d-flex align-items-start">
                                        <div class="it-contact__icon">
                                            <span><i class="fa-solid fa-clock"></i></span>
                                        </div>
                                        <div class="it-contact__text">
                                            <span>Horário de atendimento</span>
                                            <a href="#">8:00 ás 17:00</a>
                                            <span>Segunda a Sexta-feira</span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="it-contact__list d-flex align-items-start">
                                        <div class="it-contact__icon">
                                            <span><i class="fa-solid fa-phone phone"></i></span>
                                        </div>
                                        <div class="it-contact__text">
                                            <span>Contato</span>
                                            <a href="tel:+5534988480568">(34) 98848-0568</a>
                                            <a href="mailto:motoclubedocerrado@gmail.com">motoclubedocerrado@gmail.com</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="it-contact__list d-flex align-items-start">
                                        <div class="it-contact__icon">
                                            <span><i class="fa-solid fa-phone phone"></i></span>
                                        </div>
                                        <div class="it-contact__text">
                                            <span>Ouvidoria</span>
                                            <a href="tel:+5534988044211">(34) 98804-4211</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="it-contact__bottom-box d-flex align-items-center justify-content-between">
                            <div class="it-footer-social">
                                <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5">
                    @if (ViewData["message"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["message"]
                        </div>
                    }
                    @if (ViewData["msgsucesso"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewData["msgsucesso"]
                        </div>
                    }
                    <div class="it-contact__form-box">
                        <form method="post" asp-action="SendContact">
                            <div class="row">
                                <div class="col-12 mb-25">
                                    <div class="it-contact-input-box">
                                        <label asp-for="Nome">Nome*</label>
                                        <input asp-for="Nome" type="text" placeholder="Nome">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-25">
                                    <div class="it-contact-input-box">
                                        <label asp-for="Email">E-mail*</label>
                                        <input asp-for="Email" type="email" placeholder="Email" value="">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-25">
                                    <div class="it-contact-input-box">
                                        <label asp-for="Telefone">Telefone*</label>
                                        <input asp-for="Telefone" type="text" placeholder="Telefone">
                                        <span asp-validation-for="Telefone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-25">
                                    <div class="it-contact-input-box">
                                        <label asp-for="Assunto">Assunto*</label>
                                        <input asp-for="Assunto" type="text" placeholder="Assunto">
                                        <span asp-validation-for="Assunto" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-25">
                                    <div class="it-contact-textarea-box">
                                        <label asp-for="Mensagem">Mensagem</label>
                                        <textarea asp-for="Mensagem" placeholder="Message"></textarea>
                                        <span asp-validation-for="Mensagem" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="it-btn">
                                <span>
                                    Enviar mensagem
                                    <svg width="17" height="14" viewBox="0 0 17 14" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M11 1.24023L16 7.24023L11 13.2402" stroke="currentcolor" stroke-width="1.5"
                                              stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                                        <path d="M1 7.24023H16" stroke="currentcolor" stroke-width="1.5" stroke-miterlimit="10"
                                              stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                </span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact-area-end -->

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}                                          