@model MotoClubeCerrado.Models.Evento
@{
    ViewData["Title"] = "Editar Evento";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Editar Evento</h2>
            <a href="@Url.Action("Eventos")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="EditEvento" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <input asp-for="DataCriacao" type="hidden" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome do Evento *</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Ano" class="control-label">Ano *</label>
                            <input asp-for="Ano" type="number" class="form-control" min="2020" max="2100" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Ordem" class="control-label">Ordem de Exibição</label>
                            <input asp-for="Ordem" type="number" class="form-control" />
                            <small class="form-text text-muted">Ordem de exibição no menu (menor aparece primeiro)</small>
                            <span asp-validation-for="Ordem" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="Ativo" type="checkbox" class="custom-control-input" />
                        <label asp-for="Ativo" class="custom-control-label">Evento Ativo</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="ExibirMenu" type="checkbox" class="custom-control-input" />
                        <label asp-for="ExibirMenu" class="custom-control-label">Exibir no Menu</label>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar Alterações
                    </button>
                    <a href="@Url.Action("Eventos")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
