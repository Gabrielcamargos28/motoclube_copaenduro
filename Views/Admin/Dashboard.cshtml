@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stats-card bg-primary text-white">
            <i class="fas fa-users"></i>
            <h2>@ViewBag.TotalInscritos</h2>
            <p>Total de Inscritos</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card bg-success text-white">
            <i class="fas fa-check-circle"></i>
            <h2>@ViewBag.InscritosPagos</h2>
            <p>Pagamentos Confirmados</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card bg-warning text-white">
            <i class="fas fa-clock"></i>
            <h2>@ViewBag.InscritosPendentes</h2>
            <p>Pagamentos Pendentes</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card bg-info text-white">
            <i class="fas fa-calendar-alt"></i>
            <h2>@ViewBag.EtapasAtivas</h2>
            <p>Etapas Ativas</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-tachometer-alt"></i> Ações Rápidas
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Etapas", "Admin")" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-calendar-alt"></i><br>
                            Gerenciar Etapas
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Inscritos", "Inscricao")" class="btn btn-primary btn-lg w-100" target="_blank">
                            <i class="fas fa-list"></i><br>
                            Ver Inscritos Públicos
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg w-100" target="_blank">
                            <i class="fas fa-home"></i><br>
                            Visitar Site
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
