@model IEnumerable<MotoClubeCerrado.Models.Evento>
@{
    ViewData["Title"] = "Gerenciar Eventos";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Gerenciar Eventos</h2>
            <p class="text-muted">Lista de eventos do sistema</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">Lista de Eventos</h5>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("CreateEvento")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Novo Evento
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Ano</th>
                                <th>Descrição</th>
                                <th>Status</th>
                                <th>Exibir Menu</th>
                                <th>Ordem</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evento in Model)
                            {
                                <tr>
                                    <td>@evento.Id</td>
                                    <td><strong>@evento.Nome</strong></td>
                                    <td>@evento.Ano</td>
                                    <td>@(string.IsNullOrEmpty(evento.Descricao) ? "-" : evento.Descricao)</td>
                                    <td>
                                        @if (evento.Ativo)
                                        {
                                            <span class="badge badge-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        @if (evento.ExibirMenu)
                                        {
                                            <span class="badge badge-info">Sim</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Não</span>
                                        }
                                    </td>
                                    <td>@evento.Ordem</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("EventoEtapas", new { id = evento.Id })" class="btn btn-info" title="Ver Etapas">
                                                <i class="fas fa-calendar-alt"></i>
                                            </a>
                                            <a href="@Url.Action("EditEvento", new { id = evento.Id })" class="btn btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger" title="Excluir"
                                                    onclick="if(confirm('Tem certeza que deseja excluir este evento?')) { document.getElementById('deleteForm-@evento.Id').submit(); }">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        <form id="deleteForm-@evento.Id" asp-action="DeleteEvento" asp-route-id="@evento.Id" method="post" style="display:none;">
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Nenhum evento cadastrado.
                    <a href="@Url.Action("CreateEvento")" class="alert-link">Clique aqui para criar o primeiro evento</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}
