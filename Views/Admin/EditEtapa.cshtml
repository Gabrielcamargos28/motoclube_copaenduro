@model MotoClubeCerrado.Models.Etapa
@{
    ViewData["Title"] = "Editar Etapa";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i> Editar Etapa
    </div>
    <div class="card-body">
        <form asp-action="EditEtapa" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Nome" class="form-label">Nome da Etapa *</label>
                    <input asp-for="Nome" class="form-control" required>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="DataEvento" class="form-label">Data do Evento</label>
                    <input asp-for="DataEvento" class="form-control" type="datetime-local">
                    <span asp-validation-for="DataEvento" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Local" class="form-label">Local</label>
                <input asp-for="Local" class="form-control">
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input asp-for="Ativo" class="form-check-input" type="checkbox">
                        <label asp-for="Ativo" class="form-check-label">Etapa Ativa</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input asp-for="InscricoesAbertas" class="form-check-input" type="checkbox">
                        <label asp-for="InscricoesAbertas" class="form-check-label">Inscrições Abertas</label>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
                <a href="@Url.Action("Etapas")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
